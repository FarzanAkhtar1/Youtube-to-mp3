<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta http-equiv="X-UA-Compatible" content="IE=edge">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0-beta2/css/all.min.css">

  <link rel="stylesheet" href="/css/styles.css">
  <title>YouTube 2 MP3</title>
</head>
<body>
  <div class="container">
    <header>
      <h1><i class="fab fa-youtube"></i> YouTube to MP3 Converter</h1>
      <p>Convert YouTube videos to MP3 without being redirected to a virus site!</p>
    </header>
    <main>
      <form action="/convert-mp3" method="POST" id="form">
        <div class="form-group">
          <label for="videoId">Enter the video ID</label>
          <input type="text" name="videoId" id="videoId" placeholder="Video ID...">
          <button id="submit-btn">Convert</button>
        </div>
      </form>
      <div class="progress-container">
        <div class="progress-bar" id="progress-bar"></div>
      </div>
      <div class="result-container">
        <% if (typeof success != "undefined" && success) { %>
          <div class="success">
            <p><strong>Title:</strong> <%= song_title %></p>
            <a href="<%= song_link %>" class="download-btn">Download MP3</a>
          </div>
        <% } else if (typeof success != "undefined" && !success) { %>
          <div class="errors">
            <p><%= message %></p>
          </div>
        <% } %>
      </div>
    </main>
    <footer>
      <p>&copy; 2024 YouTube to MP3 Converter. All rights reserved.</p>
    </footer>
  </div>
  <script src="/js/progress.js"></script>
</body>
</html>